@model QRMenuWebUI.Dtos.ContactDtos.UpdateContactDto

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="UpdateContact" asp-controller="Contact" method="post">
                    <div class="card shadow-sm border-0 rounded-3">
                        <div class="card-header bg-white border-bottom">
                            <h5 class="card-title mb-0">İletişim Bilgisi Güncelle</h5>
                        </div>

                        <div class="card-body">
                            <input type="hidden" asp-for="ContactID" />

                            <div class="form-group mb-3">
                                <label asp-for="Location" class="form-label">Adres</label>
                                <input type="text" class="form-control" asp-for="Location" placeholder="Adres giriniz" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Phone" class="form-label">Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone" placeholder="+90 5xx xxx xx xx" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Mail" class="form-label">E-Posta</label>
                                <input type="email" class="form-control" asp-for="Mail" placeholder="ornek@mail.com" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="FooterDescription" class="form-label">Açıklama</label>
                                <textarea class="form-control" asp-for="FooterDescription" rows="3" placeholder="Alt kısımda gözükecek kısa açıklama"></textarea>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top">
                            <button type="submit" class="btn btn-success px-4">Güncelle</button>
                            <a href="/Contact/Index" class="btn btn-secondary ms-2">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
