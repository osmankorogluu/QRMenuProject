@{
    ViewData["Title"] = "Index2";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/microsoft/signalr/dist/browser/signalr.min.js"></script>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">

                    <script type="text/javascript">
                        $(document).ready(function () {

                           
                            var connection = new signalR.HubConnectionBuilder()
                                .withUrl("https://localhost:44366/SignalRHub")
                                .withAutomaticReconnect() 
                                .build();

                          
                            connection.onclose(() => {
                                $("#connstatus").text("Disconnected");
                            });

                         
                            connection.on("ReceiveCategoryCount", (value) => {
                                console.log("Kategori sayısı:", value);
                                $("#categorycount").text(value);
                            });

                            
                            connection.start()
                                .then(() => {
                                    $("#connstatus").text("Connected");

                                    
                                    setInterval(() => {
                                        connection.invoke("SendCategoryCount")
                                            .catch(err => console.error("Invoke hatası:", err));
                                    }, 1000);

                                })
                                .catch(err => {
                                    console.error("Bağlantı hatası:", err);
                                    $("#connstatus").text("Error");
                                });
                        });
                    </script>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="alert alert-success">
            Bağlantının Durumu: <strong id="connstatus"></strong>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="alert alert-info">
            Kategori Sayısı: <strong id="categorycount"></strong>
        </div>
    </div>
</div>
