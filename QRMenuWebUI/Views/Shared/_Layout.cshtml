<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>QR Menü Admin</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f7f9fc;
        }

        .sidebar {
            width: 250px;
            min-height: 100vh;
            background: #fff;
            border-right: 1px solid #e5e7eb;
        }

            .sidebar .nav-link {
                color: #374151;
                border-radius: 8px;
                margin: 4px 8px;
            }

                .sidebar .nav-link:hover {
                    background: #f3f4f6;
                    color: #111827;
                }

                .sidebar .nav-link.active {
                    background: #2563eb;
                    color: #fff !important;
                }

        .topbar {
            height: 60px;
            background: #fff;
            border-bottom: 1px solid #e5e7eb;
        }

        .card-stat {
            border: none;
            border-radius: 16px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar p-3">
            <h4 class="fw-bold mb-4">QR Menü Admin</h4>
            <div class="d-flex align-items-center mb-4">
                <img src="https://via.placeholder.com/40" class="rounded-circle me-2">
                <div>
                    <strong>Admin</strong><br>
                    <small class="text-muted">Yönetici Paneli</small>
                </div>
            </div>
            <nav class="nav flex-column">
                <a href="#" class="nav-link active"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a>
                <a href="#" class="nav-link"><i class="bi bi-list-ul me-2"></i> Kategoriler</a>
                <a href="#" class="nav-link"><i class="bi bi-box-seam me-2"></i> Ürünler</a>
                <a href="#" class="nav-link"><i class="bi bi-calendar-check me-2"></i> Rezervasyonlar</a>
                <a href="#" class="nav-link"><i class="bi bi-people me-2"></i> Referanslar</a>
                <a href="#" class="nav-link"><i class="bi bi-gear me-2"></i> Ayarlar</a>
                <a href="#" class="nav-link text-danger"><i class="bi bi-box-arrow-right me-2"></i> Çıkış Yap</a>
            </nav>
        </div>

        <!-- Content -->
        <div class="flex-grow-1">
            <!-- Topbar -->
            <div class="topbar d-flex align-items-center justify-content-between px-4">
                <form class="d-none d-md-flex">
                    <input class="form-control form-control-sm" type="search" placeholder="Arama..." />
                </form>
                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-light btn-sm position-relative">
                        <i class="bi bi-bell"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">3</span>
                    </button>
                    <img src="https://via.placeholder.com/40" class="rounded-circle">
                </div>
            </div>

            <!-- Main Content -->
            <div class="p-4">
                <h3 class="fw-bold mb-4">Dashboard</h3>
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="card card-stat p-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary text-white rounded-circle p-3 me-3">
                                    <i class="bi bi-box-seam fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="text-muted mb-0">Ürünler</h6>
                                    <h4 class="fw-bold mb-0">150</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Diğer istatistik kartları buraya -->
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
