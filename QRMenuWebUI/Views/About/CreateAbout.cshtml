<div class="content">
    <div class="page-wrapper">
        <div class="header-section">
            <h1 class="header-title">
                <i class="fas fa-info-circle"></i>
                Yeni Hakkımızda İçeriği
            </h1>
        </div>

        <form asp-action="CreateAbout" asp-controller="About" method="post">
            <div class="form-card">
                <div class="form-header">
                    <h5>
                        <i class="fas fa-pen-fancy"></i>
                        About Bilgileri
                    </h5>
                </div>

                <div class="form-body">
                    <div class="form-group">
                        <label for="title" class="form-label">
                            <i class="fas fa-heading"></i>
                            Başlık
                        </label>
                        <div class="input-icon">
                            <input type="text"
                                   class="form-control"
                                   asp-for="title"
                                   id="title"
                                   placeholder="Başlık giriniz"
                                   maxlength="100"
                                   required />
                            <i class="fas fa-font"></i>
                            <div class="char-counter" id="titleCounter">0/100</div>
                        </div>
                        <span asp-validation-for="title" class="text-danger"></span>
                        <div class="info-panel">
                            <i class="fas fa-lightbulb"></i>
                            <span>Kısa ve açıklayıcı bir başlık yazın. Örnek: "Bizim Hikayemiz" veya "Restoran Hakkında"</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="description" class="form-label">
                            <i class="fas fa-align-left"></i>
                            Açıklama
                        </label>
                        <div class="input-icon textarea-icon">
                            <textarea class="form-control"
                                      asp-for="Description"
                                      id="description"
                                      rows="6"
                                      placeholder="Detaylı açıklama yazınız..."
                                      maxlength="1000"
                                      required></textarea>
                            <i class="fas fa-paragraph"></i>
                            <div class="char-counter" id="descCounter">0/1000</div>
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <div class="info-panel">
                            <i class="fas fa-info-circle"></i>
                            <span>Restoran hakkında detaylı bilgi verin. Kuruluş hikayeniz, misyonunuz ve özel özelliklerinizi belirtin.</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="ImageUrl" class="form-label">
                            <i class="fas fa-image"></i>
                            Görsel URL'si
                        </label>
                        <div class="input-icon textarea-icon">
                            <textarea class="form-control"
                                      asp-for="ImageUrl"
                                      id="ImageUrl"
                                      rows="3"
                                      placeholder="https://example.com/image.jpg"
                                      maxlength="500"></textarea>
                            <i class="fas fa-link"></i>
                        </div>
                        <div class="url-preview" id="urlPreview">
                            <i class="fas fa-eye"></i>
                            URL geçerli görünüyor
                        </div>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        <div class="info-panel">
                            <i class="fas fa-camera"></i>
                            <span>Restoran görselini yüklemek için geçerli bir URL girin. Görsel boyutu 800x600 veya daha büyük olmalı.</span>
                        </div>
                    </div>
                </div>

                <div class="form-footer">
                    <a href="/About/Index" class="btn-modern btn-back">
                        <i class="fas fa-arrow-left"></i>
                        Geri Dön
                    </a>
                    <button type="submit" class="btn-modern btn-create">
                        <i class="fas fa-plus-circle"></i>
                        About İçeriği Oluştur
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const titleInput = document.getElementById('title');
        const descInput = document.getElementById('description');
        const imageUrlInput = document.getElementById('ImageUrl');
        const urlPreview = document.getElementById('urlPreview');

        // Karakter sayacları
        function updateCounter(input, counterId, maxLength) {
            const counter = document.getElementById(counterId);
            const currentLength = input.value.length;
            counter.textContent = `${currentLength}/${maxLength}`;

            if (currentLength > maxLength * 0.8) {
                counter.style.color = '#f59e0b';
            } else if (currentLength > maxLength * 0.9) {
                counter.style.color = '#ef4444';
            } else {
                counter.style.color = '#a0aec0';
            }
        }

        // Event listeners
        if (titleInput) {
            titleInput.addEventListener('input', () => updateCounter(titleInput, 'titleCounter', 100));
            updateCounter(titleInput, 'titleCounter', 100);
        }

        if (descInput) {
            descInput.addEventListener('input', () => updateCounter(descInput, 'descCounter', 1000));
            updateCounter(descInput, 'descCounter', 1000);
        }

        // URL validasyonu
        if (imageUrlInput && urlPreview) {
            imageUrlInput.addEventListener('input', function() {
                const url = this.value.trim();
                if (url) {
                    try {
                        new URL(url);
                        if (url.match(/\.(jpg|jpeg|png|gif|webp)$/i)) {
                            urlPreview.style.color = '#059669';
                            urlPreview.innerHTML = '<i class="fas fa-check-circle"></i> Geçerli görsel URL\'si';
                            urlPreview.classList.add('active');
                        } else {
                            urlPreview.style.color = '#f59e0b';
                            urlPreview.innerHTML = '<i class="fas fa-exclamation-triangle"></i> URL geçerli ancak görsel uzantısı bulunamadı';
                            urlPreview.classList.add('active');
                        }
                    } catch {
                        urlPreview.style.color = '#ef4444';
                        urlPreview.innerHTML = '<i class="fas fa-times-circle"></i> Geçersiz URL formatı';
                        urlPreview.classList.add('active');
                    }
                } else {
                    urlPreview.classList.remove('active');
                }
            });
        }

        // Form submit animasyonu
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function() {
                const submitBtn = form.querySelector('.btn-create');
                if (submitBtn) {
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Oluşturuluyor...';
                    submitBtn.disabled = true;
                }
            });
        }
    });
</script>