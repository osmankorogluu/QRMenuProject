<div class="content">
    <div class="page-wrapper">
        <div class="header-section">
            <h1 class="header-title">
                <i class="fas fa-edit"></i>
                About İçeriği Güncelle
            </h1>
            <div class="about-id-badge">
                <i class="fas fa-hashtag"></i>
                İçerik ID: @Model.AboutID
            </div>
        </div>

        <form asp-action="UpdateAbout" asp-controller="About" method="post">
            <input type="hidden" asp-for="AboutID" />
            <div class="form-card">
                <div class="form-header">
                    <h5>
                        <i class="fas fa-file-edit"></i>
                        İçerik Bilgilerini Düzenle
                    </h5>
                    <div class="status-indicator">
                        <i class="fas fa-info-circle"></i>
                        Mevcut içeriği güncelleyebilirsiniz
                    </div>
                </div>

                <div class="form-body">
                    <div class="form-group">
                        <label for="Title" class="form-label">
                            <i class="fas fa-heading"></i>
                            Başlık
                        </label>
                        <div class="input-icon">
                            <input type="text"
                                   class="form-control"
                                   asp-for="Title"
                                   id="Title"
                                   placeholder="Başlık giriniz"
                                   maxlength="100"
                                   required />
                            <i class="fas fa-font"></i>
                            <div class="char-counter" id="titleCounter">0/100</div>
                        </div>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Description" class="form-label">
                            <i class="fas fa-align-left"></i>
                            Açıklama
                        </label>
                        <div class="input-icon textarea-icon">
                            <textarea class="form-control"
                                      asp-for="Description"
                                      id="Description"
                                      rows="6"
                                      placeholder="Detaylı açıklama yazınız..."
                                      maxlength="1000"
                                      required></textarea>
                            <i class="fas fa-paragraph"></i>
                            <div class="char-counter" id="descCounter">0/1000</div>
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="ImageUrl" class="form-label">
                            <i class="fas fa-image"></i>
                            Görsel URL'si
                        </label>
                        <div class="input-icon">
                            <input type="url"
                                   class="form-control"
                                   asp-for="ImageUrl"
                                   id="ImageUrl"
                                   placeholder="https://example.com/image.jpg"
                                   maxlength="500" />
                            <i class="fas fa-link"></i>
                        </div>
                        <div class="url-preview" id="urlPreview">
                            <i class="fas fa-eye"></i>
                            URL geçerli görünüyor
                        </div>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-footer">
                    <a href="/About/Index" class="btn-modern btn-back">
                        <i class="fas fa-arrow-left"></i>
                        Geri Dön
                    </a>
                    <button type="submit" class="btn-modern btn-update">
                        <i class="fas fa-sync-alt"></i>
                        İçeriği Güncelle
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const titleInput = document.getElementById('Title');
        const descInput = document.getElementById('Description');
        const imageUrlInput = document.getElementById('ImageUrl');
        const urlPreview = document.getElementById('urlPreview');

        // Orijinal değerleri sakla (değişiklikleri takip etmek için)
        const originalValues = {
            title: titleInput ? titleInput.value : '',
            description: descInput ? descInput.value : '',
            imageUrl: imageUrlInput ? imageUrlInput.value : ''
        };

        // Karakter sayacları
        function updateCounter(input, counterId, maxLength) {
            const counter = document.getElementById(counterId);
            if (counter) {
                const currentLength = input.value.length;
                counter.textContent = `${currentLength}/${maxLength}`;

                if (currentLength > maxLength * 0.8) {
                    counter.style.color = '#f59e0b';
                } else if (currentLength > maxLength * 0.9) {
                    counter.style.color = '#ef4444';
                } else {
                    counter.style.color = '#a0aec0';
                }
            }
        }

        // Değişiklik takibi
        function trackChanges(input, originalValue) {
            if (input.value !== originalValue) {
                input.classList.add('modified-field');
            } else {
                input.classList.remove('modified-field');
            }
        }

        // Event listeners
        if (titleInput) {
            titleInput.addEventListener('input', () => {
                updateCounter(titleInput, 'titleCounter', 100);
                trackChanges(titleInput, originalValues.title);
            });
            updateCounter(titleInput, 'titleCounter', 100);
        }

        if (descInput) {
            descInput.addEventListener('input', () => {
                updateCounter(descInput, 'descCounter', 1000);
                trackChanges(descInput, originalValues.description);
            });
            updateCounter(descInput, 'descCounter', 1000);
        }

        // URL validasyonu
        if (imageUrlInput && urlPreview) {
            imageUrlInput.addEventListener('input', function() {
                const url = this.value.trim();
                trackChanges(this, originalValues.imageUrl);

                if (url) {
                    try {
                        new URL(url);
                        if (url.match(/\.(jpg|jpeg|png|gif|webp)$/i)) {
                            urlPreview.style.color = '#059669';
                            urlPreview.innerHTML = '<i class="fas fa-check-circle"></i> Geçerli görsel URL\'si';
                            urlPreview.classList.add('active');
                        } else {
                            urlPreview.style.color = '#f59e0b';
                            urlPreview.innerHTML = '<i class="fas fa-exclamation-triangle"></i> URL geçerli ancak görsel uzantısı bulunamadı';
                            urlPreview.classList.add('active');
                        }
                    } catch {
                        urlPreview.style.color = '#ef4444';
                        urlPreview.innerHTML = '<i class="fas fa-times-circle"></i> Geçersiz URL formatı';
                        urlPreview.classList.add('active');
                    }
                } else {
                    urlPreview.classList.remove('active');
                }
            });

            // İlk yükleme sırasında mevcut URL'yi kontrol et
            if (imageUrlInput.value.trim()) {
                imageUrlInput.dispatchEvent(new Event('input'));
            }
        }

        // Form submit animasyonu
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function() {
                const submitBtn = form.querySelector('.btn-update');
                if (submitBtn) {
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Güncelleniyor...';
                    submitBtn.disabled = true;
                }
            });
        }

        // Sayfa yüklendiğinde mevcut değerleri vurgula
        setTimeout(() => {
            const inputs = [titleInput, descInput, imageUrlInput];
            inputs.forEach(input => {
                if (input && input.value && input.value.trim() !== '') {
                    input.style.background = 'rgba(246, 173, 85, 0.05)';
                    input.style.borderColor = '#f6ad55';
                }
            });
        }, 500);
    });
</script>