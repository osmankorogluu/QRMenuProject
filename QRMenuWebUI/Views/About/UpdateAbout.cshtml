@model QRMenuWebUI.Dtos.AboutDtos.UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">About İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <form asp-action="CreateAbout" asp-controller="About" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni About Kaydı</div>
                        </div>
						<input type="hidden" asp-for="AboutID"/>
                        <div class="card-body">
                            <div class="form-group mb-3">
                                <label for="title">Başlık Giriniz</label>
                                <input type="text" class="form-control" asp-for="title" id="title" />
                                <span asp-validation-for="title" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label for="description">Açıklama Giriniz</label>
                                <textarea class="form-control" asp-for="Description" id="description" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group mb-3">
                                <label for="ımageurl">Görsel Url Giriniz</label>
                                <textarea class="form-control" asp-for="ImageUrl" id="ImageUrl" rows="2"></textarea>
                            </div>
                        </div>

                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">About Güncelle</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
