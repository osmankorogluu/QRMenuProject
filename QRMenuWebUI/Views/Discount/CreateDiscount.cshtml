@model QRMenuWebUI.Dtos.DiscountDtos.CreateDiscountDto

@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <form asp-action="CreateDiscount" asp-controller="Discount" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İndirim Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">İndirim Başlığını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title" />
                            </div>
                            <div class="form-group mt-3">
                                <label for="Amount">İndirim Oranını Giriniz (%)</label>
                                <input type="number" class="form-control" asp-for="Amount" id="Amount" min="0" max="100" />
                            </div>
                            <div class="form-group mt-3">
                                <label for="ImageUrl">Görsel Url</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl" min="0" max="100" />
                            </div>
                            <div class="form-group mt-3">
                                <label for="Description">Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description" id="Description" min="0" max="100" />
                            </div>
                        </div>

                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">İndirim Ekle</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
