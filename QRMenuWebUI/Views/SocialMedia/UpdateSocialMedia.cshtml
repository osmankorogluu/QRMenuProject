@model QRMenuWebUI.Dtos.SocialMediaDtos.UpdateSocialMediaDto

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="UpdateSocialMedia" asp-controller="SocialMedia" method="post">
                    <div class="card shadow-sm border-0 rounded-3">
                        <div class="card-header bg-white border-bottom">
                            <h5 class="card-title mb-0">Sosyal Medya Güncelle</h5>
                        </div>

                        <div class="card-body">
                            <input type="hidden" asp-for="SocialMediaID" />

                            <div class="form-group mb-3">
                                <label asp-for="Title" class="form-label">Başlık</label>
                                <input type="text" class="form-control" asp-for="Title" placeholder="Platform adı (örn. Facebook, Twitter)" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Url" class="form-label">URL</label>
                                <input type="url" class="form-control" asp-for="Url" placeholder="https://..." />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Icon" class="form-label">İkon</label>
                                <input type="text" class="form-control" asp-for="Icon" placeholder="la la-facebook, fab fa-twitter gibi" />
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top">
                            <button type="submit" class="btn btn-success px-4">Güncelle</button>
                            <a href="/SocialMedia/Index" class="btn btn-secondary ms-2">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
