@model QRMenuWebUI.Dtos.FeatureDtos.UpdateFeatureDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="UpdateFeature" asp-controller="Feature" method="post">
                    <div class="card shadow-sm border-0 rounded-3">
                        <div class="card-header bg-white border-bottom">
                            <h5 class="card-title mb-0">Öne Çıkan Güncelle</h5>
                        </div>

                        <div class="card-body">
                            <input type="hidden" asp-for="FeatureID" />

                            <!-- Title 1 & Description 1 -->
                            <div class="form-group mb-3">
                                <label asp-for="Title1" class="form-label">Başlık 1</label>
                                <input type="text" class="form-control" asp-for="Title1" placeholder="Başlık 1 giriniz" />
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Description1" class="form-label">Açıklama 1</label>
                                <textarea class="form-control" asp-for="Description1" rows="2" placeholder="Açıklama 1 giriniz"></textarea>
                            </div>

                            <!-- Title 2 & Description 2 -->
                            <div class="form-group mb-3">
                                <label asp-for="Title2" class="form-label">Başlık 2</label>
                                <input type="text" class="form-control" asp-for="Title2" placeholder="Başlık 2 giriniz" />
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Description2" class="form-label">Açıklama 2</label>
                                <textarea class="form-control" asp-for="Description2" rows="2" placeholder="Açıklama 2 giriniz"></textarea>
                            </div>

                            <!-- Title 3 & Description 3 -->
                            <div class="form-group mb-3">
                                <label asp-for="Title3" class="form-label">Başlık 3</label>
                                <input type="text" class="form-control" asp-for="Title3" placeholder="Başlık 3 giriniz" />
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Description3" class="form-label">Açıklama 3</label>
                                <textarea class="form-control" asp-for="Description3" rows="2" placeholder="Açıklama 3 giriniz"></textarea>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top">
                            <button type="submit" class="btn btn-success px-4">Güncelle</button>
                            <a href="/Feature/Index" class="btn btn-secondary ms-2">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
