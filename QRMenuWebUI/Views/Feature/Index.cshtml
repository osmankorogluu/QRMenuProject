@using QRMenuWebUI.Dtos.FeatureDtos
@model List<GetFeatureDto>

@{
    ViewData["Title"] = "Öne Çıkanlar";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<style>
    body {
        background: #f4f6f9;
        font-family: 'Segoe UI', sans-serif;
        color: #2d2d2d;
    }

    .page-wrapper {
        max-width: 1100px;
        margin: 40px auto;
    }

    .card-modern {
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        background: #fff;
        box-shadow: 0 2px 6px rgba(0,0,0,.05);
    }

    .card-header-modern {
        background: #fff;
        border-bottom: 1px solid #e5e7eb;
        font-weight: 600;
        font-size: 1rem;
        padding: 16px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .table-modern th {
        background-color: #fafafa !important;
        font-weight: 600;
        text-transform: uppercase;
        font-size: .8rem;
        color: #444;
    }

    .table-modern td {
        vertical-align: middle;
        font-size: .9rem;
        text-align: left;
    }

    .btn-sil {
        background: transparent;
        border: 1px solid #dc3545;
        color: #dc3545;
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 0.85rem;
        transition: all 0.2s ease;
    }

        .btn-sil:hover {
            background: #dc3545;
            color: #fff;
        }

    .btn-guncelle {
        background: transparent;
        border: 1px solid #28a745;
        color: #28a745;
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 0.85rem;
        transition: all 0.2s ease;
    }

        .btn-guncelle:hover {
            background: #28a745;
            color: #fff;
        }

    .desc {
        max-width: 300px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

<div class="content">
    <div class="page-wrapper">
        <div class="card-modern">
            <div class="card-header-modern">
                <span><i class="fas fa-star me-2"></i> Öne Çıkanlar Yönetimi</span>
                <a href="/Feature/CreateFeature/" class="btn btn-dark btn-sm fw-bold">
                    <i class="fas fa-plus-circle me-1"></i> Yeni Öne Çıkan
                </a>
            </div>

            <div class="card-body p-4">
                <table class="table table-modern table-hover align-middle">
                    <thead>
                        <tr>
                            <th style="width:50px">#</th>
                            <th>Başlık 1</th>
                            <th>Açıklama 1</th>
                            <th>Başlık 2</th>
                            <th>Açıklama 2</th>
                            <th>Başlık 3</th>
                            <th>Açıklama 3</th>
                            <th style="width:180px">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Title1</td>
                                    <td><span class="desc" title="@item.Description1">@item.Description1</span></td>
                                    <td>@item.Title2</td>
                                    <td><span class="desc" title="@item.Description2">@item.Description2</span></td>
                                    <td>@item.Title3</td>
                                    <td><span class="desc" title="@item.Description3">@item.Description3</span></td>
                                    <td>
                                        <a href="/Feature/UpdateFeature/@item.FeatureID"
                                           class="btn-guncelle me-2">Güncelle</a>
                                        <a href="/Feature/DeleteFeature/@item.FeatureID"
                                           class="btn-sil">Sil</a>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-muted py-4 text-center">
                                    <i class="fas fa-inbox fa-2x d-block mb-2"></i>
                                    Hiç öne çıkan kayıt bulunamadı.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
