@model QRMenuWebUI.Dtos.ProductDtos.UpdateProductDto

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün Güncelleme Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="UpdateProduct" asp-controller="Product" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürün Güncelle</div>
                        </div>

                        <div class="card-body">
                            
                            <input type="hidden" asp-for="ProductID" />

                            <div class="form-group mb-3">
                                <label for="productname">Ürün Adı</label>
                                <input type="text" class="form-control" asp-for="ProductName" id="productname" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label for="price">Ürün Fiyatı</label>
                                <input type="number" step="0.01" class="form-control" asp-for="Price" id="price" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label for="imageurl">Ürün Görseli</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageurl" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label for="category">Kategori</label>
                                @Html.DropDownListFor(model => model.CategoryID,
                                (List<SelectListItem>)ViewBag.v,
                                                                new { @class = "form-control", id = "category" })
                                <span asp-validation-for="CategoryID" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label for="description">Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description" id="description" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                          
                            <div class="form-group mb-3">
                                <label for="status">Durum</label>
                                <input type="hidden" asp-for="ProductStatus" value="false" />
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="ProductStatus" id="status" />
                                    <label class="form-check-label" for="status">Aktif mi?</label>
                                </div>
                                <span asp-validation-for="ProductStatus" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Ürünü Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
