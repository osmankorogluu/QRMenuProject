@model QRMenuWebUI.Dtos.ProductDtos.CreateProductDto

@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                
                <form asp-action="CreateProduct" asp-controller="Product" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Ürün Girişi</div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="productname">Ürün Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="ProductName" id="productname" />
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="price">Ürün Fiyatını Giriniz</label>
                                <input type="number" step="0.01" class="form-control" asp-for="Price" id="price" />
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="imageurl">Ürün Görselini Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageurl" />
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="category">Ürün Kategorisi Seçiniz</label>
                                @Html.DropDownListFor(model => model.CategoryID,
                                (List<SelectListItem>)ViewBag.v,
                                                                new { @class = "form-control", id = "category" })
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="description">Ürün Açıklaması Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description" id="description" />
                            </div>
                        </div>

                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Ürün Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
