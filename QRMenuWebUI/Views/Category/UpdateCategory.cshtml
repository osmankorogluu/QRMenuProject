@model QRMenuWebUI.Dtos.CategoryDtos.UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori Güncelleme Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <!-- action düzeltildi -->
                <form asp-action="UpdateCategory" asp-controller="Category" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kategori Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="CategoryID" />
                            <div class="form-group">
                                <label for="name">Kategori Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="name" />
                            </div>
                            <div class="form-group">
                                <label for="status">Durum</label>
                                <input type="checkbox" asp-for="Status" id="status" />
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Kategori Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
