@model QRMenuWebUI.Dtos.TestimonailoDtos.CreateTestimonialDto

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="CreateTestimonial" asp-controller="Testimonial" method="post">
                    <div class="card shadow-sm border-0 rounded-3">
                        <div class="card-header bg-white border-bottom">
                            <h5 class="card-title mb-0">Yeni Referans Ekle</h5>
                        </div>

                        <div class="card-body">
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="form-label">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Müşteri adı soyadı" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Title" class="form-label">Ünvan / Başlık</label>
                                <input type="text" class="form-control" asp-for="Title" placeholder="Örn: CEO, Müdür" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Comment" class="form-label">Yorum</label>
                                <textarea class="form-control" asp-for="Comment" rows="3" placeholder="Müşteri yorumu"></textarea>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ImageUrl" class="form-label">Görsel URL</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" placeholder="https://..." />
                            </div>

                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" asp-for="Status" />
                                <label asp-for="Status" class="form-check-label">Aktif mi?</label>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top">
                            <button type="submit" class="btn btn-primary px-4">Kaydet</button>
                            <a href="/Testimonial/Index" class="btn btn-secondary ms-2">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>