@model QRMenuWebUI.Dtos.TestimonailoDtos.UpdateTestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans Güncelleme</h4>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <div class="row">
            <div class="col-md-12">
                <form asp-action="UpdateTestimonial" asp-controller="Testimonial" method="post">
                    <div class="card shadow-sm border-0 rounded-3">
                        <div class="card-header bg-white border-bottom">
                            <h5 class="card-title mb-0">Referans Güncelle</h5>
                        </div>

                        <div class="card-body">
                            <input type="hidden" asp-for="TestimonialID" />

                            <div class="form-group mb-3">
                                <label asp-for="Name" class="form-label">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Title" class="form-label">Ünvan</label>
                                <input type="text" class="form-control" asp-for="Title" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Comment" class="form-label">Yorum</label>
                                <textarea class="form-control" asp-for="Comment" rows="3"></textarea>
                                <span asp-validation-for="Comment" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ImageUrl" class="form-label">Görsel URL</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <input type="hidden" asp-for="Status" value="false" />
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="Status" id="status" />
                                    <label class="form-check-label" for="status">Aktif mi?</label>
                                </div>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top">
                            <button type="submit" class="btn btn-success px-4">Güncelle</button>
                            <a href="/Testimonial/Index" class="btn btn-secondary ms-2">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
